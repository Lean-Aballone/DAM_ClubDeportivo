<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa de fondo: el borde con gradiente -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#F0F"
                android:endColor="#0FF"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Capa superior: fondo transparente más pequeño para simular el contenido del botón -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>