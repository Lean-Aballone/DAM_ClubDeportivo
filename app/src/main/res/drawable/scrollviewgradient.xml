<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa de fondo: el borde con gradiente -->

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#F0F"
                android:endColor="#0FF"
                android:type="linear" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp" />
        </shape>
    </item>

    <!-- Capa superior: fondo transparente más pequeño para simular el contenido del botón -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp" />
        </shape>
    </item>

</layer-list>