<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".sectionInscripcion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:padding="2dp"
                android:layout_weight="1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="0dp"
                app:srcCompat="@drawable/loginicon" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <ImageButton
                android:onClick="returnToMain"
                android:layout_weight="1"
                android:id="@+id/imageButton"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/homeicon" />

        </LinearLayout>

        <LinearLayout
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:layout_marginStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inscribir Cliente"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/editTextNombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="#BDBDBD"
                android:inputType="text"
                android:paddingStart="10dp"
                android:selectAllOnFocus="false"
                android:textColor="@android:color/black"
                android:textColorHint="#666"
                />
            <TextView
                android:id="@+id/textViewApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/editTextApellido"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#BDBDBD"
                android:textColor="@android:color/black"
                android:inputType="text"
                android:paddingStart="10dp"
                android:selectAllOnFocus="false"
                android:textColorHint="#666"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/textViewDNI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Documento (DNI)"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/editTextDNI"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="40dp"
                android:background="#BDBDBD"
                android:inputType="number|numberSigned"
                android:paddingStart="10dp"
                android:selectAllOnFocus="false"
                android:textColor="@android:color/black"
                android:textColorHint="#666" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:textIsSelectable="false"
                    android:thumbTint="@color/white"
                    android:thumbTintMode="src_over"
                    android:trackTint="#0FF"
                    android:trackTintMode="src_over"
                    app:switchPadding="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/AptoFisico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:paddingStart="16dp"
                        android:text="Apto fÃ­sico"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/AptoFisicoPresentado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingStart="16dp"
                        android:text="Presentado"
                        android:textColor="#888"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:textIsSelectable="false"
                    android:thumbTint="@color/white"
                    android:thumbTintMode="src_in"
                    android:trackTint="#686868"
                    android:trackTintMode="src_over"
                    app:switchPadding="16dp" />

                <TextView
                    android:id="@+id/textViewNoSocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:paddingStart="16dp"
                    android:text="No Socio"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="0dp"
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btngradient"
                    android:drawableTint="@color/design_default_color_primary"
                    android:drawableTintMode="src_over"
                    android:foreground="@drawable/btngradient"
                    android:text="Ingresar"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>